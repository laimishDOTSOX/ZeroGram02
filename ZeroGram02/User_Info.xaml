<Page x:Class="ZeroGram02.User_Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ZeroGram02"
        mc:Ignorable="d"
      d:DesignHeight="640" d:DesignWidth="700"
        Title="User_Info">
    <Grid x:Name="Layout" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Foreground="White" HorizontalContentAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" Content="ZeroGram" FontSize="100" FontFamily="./#Fuggles"/>
        <Label Foreground="White" HorizontalContentAlignment="Center" Grid.Row="2" Grid.Column="1" Content="Аккаунт"/>
        <Label Foreground="White" HorizontalContentAlignment="Center" Grid.Row="3" Grid.Column="0" Content="Логин"/>
        <Label Foreground="White" HorizontalContentAlignment="Center" Grid.Row="5" Grid.Column="0" Content="Пароль" Grid.RowSpan="2"/>
        <TextBox IsReadOnly="True" x:Name="Login" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" LostFocus="Login_LostFocus"/>
        <Button x:Name="EditLogin" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Content="Изменить логин" Click="EditLogin_Click"/>
        <TextBox IsReadOnly="True" x:Name="CurrentPassword" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" LostFocus="CurrentPassword_LostFocus"/>
        <Button x:Name="EditPassword" Content="Изменить пароль" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Click="EditPassword_Click"/>
        <Image x:Name="UserImage" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="3" Stretch="UniformToFill"/>
        <Button x:Name="loadPicture" Content="Загрузить фото" Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="2" Click="loadPicture_Click"/>
        <Button Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2" Content="Сохранить" Click="Button_Click"/>
    </Grid>
</Page>
