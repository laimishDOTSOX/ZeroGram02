<Page x:Class="ZeroGram02.User_Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ZeroGram02"
        mc:Ignorable="d"
      d:DesignHeight="640" d:DesignWidth="700"
        Title="User_Info">
    <Grid x:Name="Layout" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" Content="ZeroGram" FontSize="100" FontFamily="./#Fuggles"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Аккаунт"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Логин"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Текущий пароль"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Новый пароль"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Повторите пароль"/>
        <TextBox x:Name="Login" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="CurrentPassword" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="NewPassword" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="ConfirmPassword" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Image x:Name="UserImage" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="3" Stretch="UniformToFill"/>
        <Button x:Name="loadPicture" Content="Загрузить фото" Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="2" Click="loadPicture_Click"/>
        <Button x:Name="SaveInfo" Grid.Row="7" Grid.Column="1" Content="Сохранить"/>
        <Button x:Name="EditInfo" Grid.Row="7" Grid.Column="2" Content="Редактировать данные"/>
    </Grid>
</Page>
